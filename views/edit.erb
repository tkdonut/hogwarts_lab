<div class='studentform'>
  <h2>Enrolment Contract</h2>
  <form action='/students/<%= @student.id%>/edit' method='post'>
    <p>
      <label for="first_name"> First Name: </label>
      <input type="text" name="first_name" id="first_name" value="<%= @student.first_name.capitalize %>">
    </p><p>
      <label for="last_name"> Last Name: </label>
      <input type="text" name="last_name" id="last_name" value="<%= @student.last_name.capitalize %>">
    </p><p>
      <label for="age"> Age: </label>
      <input max='150' min='0' type="number" name="age" id="age" value="<%= @student.age %>">
    </p><p>
      <label for="house_select">Select House:</label>
      <select name="house_id" id="house_select" value="<%= @student.house_id %>">
        <% @houses.each do |house| %>
          <option value="<%=house.id%>"<%="selected" if @student.house.name == house.name%>><%=house.name.capitalize%></option>
        <% end %>
      </select>
    </p><p>
      <label></label>
      <input type="submit" value="Enrol">
    </p>
</form>
